#!/usr/bin/env bash

# packages
paru -Scq
paccache -ruq
sudo pacman -Rnus $(sudo pacman -Qdtq ) 2>/dev/null

# home files
rm ~/.{wget-hsts,python_history} 2>/dev/null

# ~/.cache
shopt -s extglob
pushd ~/.cache/ &>/dev/null || exit 1
echo -e "\nCleaning ~/.cache"
rm -rf !(betterlockscreen|ImageMagick|fontconfig)
popd &>/dev/null || exit 1
shopt -u extglob

# trash
rm -rf ~/.local/share/Trash/*
