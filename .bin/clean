#!/usr/bin/env bash

# pacman
sudo pacman -Scq --noconfirm
paccache -ru
sudo pacman -Qtdq --noconfirm | sudo pacman -Rnsu - --noconfirm 2>/dev/null

# home files
rm -v ~/.{lesshst,wget-hsts} 2>/dev/null

# ~/.cache
shopt -s extglob
pushd ~/.cache/ &>/dev/null || exit 1
rm -rf !(betterlockscreen|ImageMagick|fontconfig) &>/dev/null
popd &>/dev/null || exit 1
shopt -u extglob
