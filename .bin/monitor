#!/usr/bin/env bash

mon=$1
[[ "$mon" =~ ^main|ext|both$ ]] || {
   echo -e "Usage:\t$(basename "$0") <main|ext|both>"
   exit 1
}

# Look for another connected monitor, exit otherwise
connected=$(xrandr --query | grep '\bconnected\b')
count=$(echo "$connected" | wc -l)
[ "$count" -gt 1 ] || exit 1

case "$mon" in
main)
   xrandr \
      --output eDP1 --primary --auto \
      --output DP1 --off \      
      # --output HDMI-1 --off
   ;;
ext)
   xrandr \
      --output DP1 --primary --auto \
      --output eDP1 --off \      
      # --output HDMI-1 --off
   ;;
both)
   xrandr \
      --output eDP1 --auto --pos 0x283 \
      --output DP1 --primary --auto --pos 1366x0 \
      # --output HDMI-1 --off
   ;;
esac

